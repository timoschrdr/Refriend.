{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "üöÄ Start Expo App",
			"type": "shell",
			"command": "npm",
			"args": ["start"],
			"options": {
				"cwd": "${workspaceFolder}/refriend-app"
			},
			"group": "build",
			"isBackground": true,
			"presentation": {
				"echo": true,
				"reveal": "always",
